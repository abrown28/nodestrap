extends layout

block content
	form.form-horizontal(method="post")
		fieldset
			legend Contact Me
			.control-group
				label.control-label(for="name") Name
				.controls
					input#name(type="text", name="name", placeholder="Your Name")
			.control-group
				label.control-label(for="email") Email
				.controls
					.input-append
						input#email(type="text", name="email", placeholder="Your Email Address")
						span.add-on @
			.control-group
				label.control-label(for="message") Message
				.controls
					textarea#message(name="message", placeholder="What do you have to say for yourself", rows="8")
			.control-group
				.controls
					button.btn.btn-primary(type="submit") Send

